export ZSH="$HOME/.oh-my-zsh"
ZSH_THEME="afowler"
plugins=(git dnf zsh-autosuggestions zsh-syntax-highlighting)

source $ZSH/oh-my-zsh.sh

# --- THE HOLMAN LOADER ---
# This automatically sources every .zsh file in your topics
for config_file ($HOME/dotfiles/**/*.zsh) source $config_file

# --- CORE SETTINGS ---
source <(fzf --zsh)
HISTFILE=~/.zsh_history
HISTSIZE=10000
SAVEHIST=10000
setopt appendhistory

autoload -Uz compinit
compinit
